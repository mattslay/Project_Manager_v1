<!DOCTYPE html>
<html>
<head>
  <title>Super Duper Project Manager in Rails 3</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<%= render :partial => "layouts/topmenu" %>


<% if flash[:notice] %>
  <div class="flash-notice">
    <p><%= flash[:notice] %></p>
  </div>
<% end %>

<% if flash[:error] %>
  <div class="flash-error">
    <p><%= flash[:error] %></p>
  </div>
<% end %>


<div id="main">
  <%= yield %>
</div>


  
</body>
</html>
